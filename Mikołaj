            margin: 20px 0;
        }

        #game-board {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(80px, 1fr));
            gap: 10px;
            max-width: 600px;
            margin: 20px auto;
        }

        .grid div {
            width: 80px;
            height: 80px;
            background-color: #fff;
            border: 2px solid #ccc;
            border-radius: 8px;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
            transition: transform 0.2s, background-color 0.3s;
        }

        .grid div:hover {
            transform: scale(1.1);
        }

        .hidden {
            display: none;
        }

