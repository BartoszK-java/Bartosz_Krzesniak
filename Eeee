<!DOCTYPE html>
<html lang="pl">
<head>
  <meta charset="UTF-8">
  <title>Przelicznik walut</title>
  <style>
    body { font-family: Arial; padding: 20px; }
    label, select, input, button { display: block; margin: 10px 0; }
  </style>
</head>
<body>

  <h1>Przelicznik walut</h1>

  <label for="kwota">Kwota:</label>
  <input type="number" id="kwota" />

  <label for="walutaZ">Waluta źródłowa:</label>
  <select id="walutaZ"></select>

  <label for="walutaDo">Waluta docelowa:</label>
  <select id="walutaDo"></select>

  <button id="przycisk">Przelicz</button>

  <h2 id="wynik"></h2>

  <script>
    const walutaZ = document.getElementById('walutaZ')
    const walutaDo = document.getElementById('walutaDo')
    const przycisk = document.getElementById('przycisk')
    const wynik = document.getElementById('wynik')

    function dodajWaluty(select, waluty) {
      for (const kod in waluty) {
        const opcja = document.createElement('option')
        opcja.value = kod
        opcja.textContent = `${kod}`
        select.appendChild(opcja)
      }
    }

    fetch('https://api.nbp.pl/api/exchangerates/tables/A?format=json')
      .then(odpowiedz => odpowiedz.json())
      .then(dane => {
        if (dane && dane[0] && dane[0].rates) {
          const waluty = dane[0].rates
          const listaWalut = {}
          waluty.forEach(waluta => {
            listaWalut[waluta.code] = waluta
          })
          dodajWaluty(walutaZ, listaWalut)
          dodajWaluty(walutaDo, listaWalut)
          walutaZ.value = 'USD'
          walutaDo.value = 'PLN'
        } else {
          wynik.textContent = 'Nie udało się pobrać listy walut.'
        }
      })
      .catch(() => {
        wynik.textContent = 'Błąd podczas ładowania danych z API.'
      })

    przycisk.addEventListener('click', () => {
      const kwota = document.getElementById('kwota').value
      const z = walutaZ.value
      const do_ = walutaDo.value

      if (kwota === '' || kwota <= 0) {
        wynik.textContent = 'Wprowadź poprawną kwotę.'
        return
      }

      fetch(`https://api.nbp.pl/api/exchangerates/rates/A/${z}/?format=json`)
        .then(odpowiedz => odpowiedz.json())
        .then(dane => {
          const kursZ = dane.rates[0].mid
          fetch(`https://api.nbp.pl/api/exchangerates/rates/A/${do_}/?format=json`)
            .then(odpowiedz => odpowiedz.json())
            .then(dane => {
              const kursDo = dane.rates[0].mid
              const wynikPrzeliczenia = (kwota * kursDo / kursZ).toFixed(2)
              wynik.textContent = `Wynik: ${wynikPrzeliczenia} ${do_}`
            })
            .catch(() => {
              wynik.textContent = 'Błąd podczas przeliczania.'
            })
        })
        .catch(() => {
          wynik.textContent = 'Błąd podczas przeliczania.'
        })
    })
  </script>

</body>
</html>
